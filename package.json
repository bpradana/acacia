{
  "name": "acacia",
  "version": "1.0.0",
  "description": "Nested Tab Browser",
  "main": "main.js",
  "scripts": {
    "build": "npm run build:main && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "watch:main": "tsc --watch -p tsconfig.main.json",
    "dev": "npm run build:main && concurrently \"npm:watch:main\" \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist:mac": "npm run build && electron-builder --mac --arm64"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@radix-ui/react-scroll-area": "^1.2.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.7.2",
    "vite": "^5.4.10",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.acacia.browser",
    "productName": "Acacia",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/main/**/*",
      "dist/preload/**/*",
      "dist/renderer/**/*",
      "main.js",
      "package.json"
    ],
    "mac": {
      "icon": "icons/acacia.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity"
    }
  }
}
