{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "sourceMap": true,
    "declaration": false
  },
  "include": ["src/main", "src/preload", "src/common"],
  "exclude": ["src/renderer"]
}
